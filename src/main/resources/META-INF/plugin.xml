<idea-plugin>
    <id>riot.js</id>
    <name>Riot.js</name>
    <vendor email="andrey.starovoyt@jetbrains.com" url="https://github.com/anstarovoyt/intellij-riot.js">
        Andrey Starovoyt
    </vendor>
    <depends>JavaScript</depends>
    <description>Riot.js</description>

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="riot.intellij.lang.RiotFileTypeFactory"/>
        <lang.parserDefinition language="Riot" implementationClass="riot.intellij.lang.RiotParserDefinition"/>
        
        <!-- Xml related things -->
        <xml.elementDescriptorProvider order="first"
                                       implementation="riot.intellij.xml.RiotComponentDescriptorProvider"/>


        <lang.parserDefinition language="RiotJS" implementationClass="riot.intellij.js.RiotJSParsingDefinition"/>
        <multiHostInjector implementation="riot.intellij.js.RiotJSInjector" id="riot"/>
    </extensions>
    <extensions defaultExtensionNs="JavaScript">
        <frameworkSpecificHandlersFactory language="JavaScript"
                                          implementationClass="riot.intellij.js.RiotJSFrameworkSpecificHandlersFactory"/>

        <intentionAndInspectionFilter language="RiotJS" implementationClass="riot.intellij.js.RiotInspectionFilter"/>
    </extensions>
</idea-plugin>